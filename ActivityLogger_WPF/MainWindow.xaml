<Window x:Class="ActivityLogger_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivityLogger_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        xmlns:viewModels="clr-namespace:ActivityLogger_WPF.MVVM.ViewModels">
    <Window.Background>
        <SolidColorBrush Opacity="0.5" Color="#a31aff"/>
    </Window.Background>
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl Style="{StaticResource MainTabControl}"
                    Grid.Column="0">
            <TabItem Header="Current Activity"/>
        </TabControl>
    </Grid>
</Window>
