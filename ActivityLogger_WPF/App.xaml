<Application x:Class="ActivityLogger_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ActivityLogger_WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CustomControls/MainWindowControls.xaml"/>
                <ResourceDictionary Source="CustomControls/ToDoViewControls.xaml"/>
                <ResourceDictionary Source="CustomControls/ColorTheme.xaml"/>
                <ResourceDictionary Source="ViewModelDataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
